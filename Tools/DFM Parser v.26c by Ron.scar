  // current main form's height is.
  btnGenerate.Top := frmParser.Height - 82;
  btnCopy.Top := btnGenerate.Top;
  btnSave.Top := btnGenerate.Top;
  btnErase.Top := btnGenerate.Top;
  ReadOnly.Top := btnGenerate.Top + 4;
