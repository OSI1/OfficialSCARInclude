var
  i, n : Integer;
begin
  n := GetArrayLength(arr) - 1;
  if (n > -1) then
  begin
    for i := 0 to n do
      if (CaseSensitive) then
      begin
        if (arr[i] = Find) then
        begin
          Result := i;
          Exit;
        end;
      end else
      begin
        if (Lowercase(arr[i]) = Lowercase(Find)) then
        begin
          Result := i;
          Exit;
        end;
      end;
    Result := -1; // returns -1 if it wasn't found
  end;
end;}

